@model List<WebsiteRegisteredLearningPlan.Models.CTTAIKHOAN>

@{
    ViewBag.Title = "CapNhatTT";
    Layout = "~/Areas/SinhVien/Views/Shared/SinhVien.cshtml";
}


<section class="section-margin" style="margin-left: 25%; margin-right: 25%; border: 5px solid">
    @foreach (var item in Model)
    {
        <form action="@Url.Action("CapNhatTT", "CapNhatTT")" method="post">
            @*<input type="hidden" value="@Model.id" name="id" />*@
            <div class="form-group">
                <h2 style="text-align:center; color: red">Thông tin cá nhân</h2>
                <label for="exampleInputEmail1" style="color: black; margin-left: 20%">Họ và tên</label>
                <input type="text" class="form-control" id="phonenumber" value="@item.hovaten" style="color: black; margin-left: 20%; width: 50%">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" style="color: black; margin-left: 20%">Email</label>
                <input type="email" class="form-control" id="email" value="@item.AspNetUser.Email" style="color: black; margin-left: 20%; width: 50%" readonly>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" style="color: black; margin-left: 20%">Số điện thoại</label>
                <input type="text" class="form-control" id="phonenumber" value="@item.sdt" style="color: black; margin-left: 20%; width: 50%">
            </div>
            <div class="form-group" style="margin-left: 75%; margin-bottom: 2%">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" style="border-radius: 50%; width:100%;height:50%">Lưu</button>
                </div>
            </div>
        </form>
    }
</section>