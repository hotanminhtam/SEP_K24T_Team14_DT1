@model List<WebsiteRegisteredLearningPlan.Models.HOCKY>
@{
    ViewBag.Title = "HocKyQL";
}

<div class="col-md-4">
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html"> <i class="fa fa-home"></i> </a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/QuanLy/HocKyQL/HocKyQL">Quản lý học kỳ</a>
        </li>
    </ul>
</div>
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <!-- Basic table card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Học kỳ</h5>
                        @*<span>use class <code>table</code> inside table element</span>*@
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                @*<li><i class="fa fa-trash close-card"></i></li>*@
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</t/h>
                                        <th scope="col">Học kỳ</th>
                                        <th scope="col">Mã học kỳ</th>
                                        <th scope="col">Ngày bắt đầu</th>
                                        <th scope="col">Ngày kết thúc</th>
                                        <th scope="col">*</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        var item = Model[i];
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@item.tenhk</td>
                                            <td>@item.mahk</td>
                                            <td>@item.ngaybd</td>
                                            <td>@item.ngaykt</td>
                                            <td>@Html.ActionLink("Cập nhật", "DeadlineHK", new { id = item.mahk })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Basic table card end -->
            </div>
            <!-- Page-body end -->
        </div>
    </div>
    <!-- Main-body end -->

    <div id="styleSelector">

    </div>
</div>